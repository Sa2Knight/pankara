<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

<div class="container-fluid">
  <div id="div_top_column" class="row">

    <!-- PCここから -->
    <% if Util.is_pc? %>
    <!-- 左カラム -->
    <div class="col-xs-2 center">
      <h2><%= h @user['screenname'] %></h2>
      <div id="top_my_icon">
        <%= user_icon @user['username'] , '100%' , '100%' %>
      </div>
      <div id="div_myprofile">
        <p>
          前回のカラオケ<br>
          <% if @recent_karaoke %>
            <%= karaoke_link @recent_karaoke['id'] , @recent_karaoke['datetime'] %>
          <% else %>
            記録がありません
          <% end %>
        </p>
      </div>
      <h3 class='center'>友達の記録</h3>
      <%= erb :_timeline %>
    </div>
    <!-- 右カラム -->
    <div class="col-xs-10">
      <p class="center"><img style="margin-top: -20px" src="/image/pankara.png"></p>
      <div class='center'>
        <img style="text-align: center" src="/image/pandalin.png" width='330px' height=auto>
        <img style="text-align: center" src="/image/kaeru.png" width='270px' height=auto>
        <img style="text-align: center" src="/image/satou1.png" width='270px' height=auto>
      </div>
    </div>
    <!-- PCここまで -->

    <!-- スマートフォンここから -->
    <% else %>
    <div class='center'>
      <p class="center"><img style="margin-top: -20px" src="/image/pankara.png" width="100%"></p>
      <h2><%= h @user['screenname'] %></h2>
      <div id="top_my_icon">
        <%= user_icon @user['username'] , '100%' , '100%' %>
      </div>
      <div id="div_myprofile">
        <p>
          前回のカラオケ<br>
          <% if @recent_karaoke %>
            <%= karaoke_link @recent_karaoke['id'] , @recent_karaoke['datetime'] %>
          <% else %>
            記録がありません
          <% end %>
        </p>
      </div>
      <h3 class='center'>友達の記録</h3>
      <%= erb :_timeline %>
      <div style="margin-bottom: 120px"></div>
    </div>
    <% end %>
    <!-- スマートフォンここまで -->
  </div>
  <%= erb :_bathtowel %>
</div>
