<h1>歌手別歌唱回数ランキング</h1>
<p class='right'><%= erb :_ranking_mode_link %></p>
<table id="artistranking_table" class="table sortable table-hover linkcursor">
  <thead>
    <tr>
      <th class='center'>順位</th>
      <th>歌手名</th>
      <th class='center'>回数</th>
      <th class='center'>曲数</th>
      <th class='center'>１曲あたり</th>
    </tr>
  </thead>
  <tbody>
    <% @artists.each do |artist| %>
    <tr>
      <td class='center' width='15%'><%= artist['rank'] %></td>
      <td><%= artist_link artist['id'], artist['name'] %></td>
      <td class='center width="60"'><%= artist['count'] %></td>
      <td class='center width="60"'><%= artist['song_num'] %></td>
      <td class='center width="60"'><%= h(artist['count'].to_f / artist['song_num'].to_f) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

