<h1>歌唱回数ランキング</h1>
<table border="1" class="table table-hover linkcursor">
	<thead>
		<tr>
			<th>順位</th>
			<th>動画</th>
			<th>曲名</th>
			<th>歌手名</th>
			<th>回数</th>
		</tr>
	</thead>
	<tbody>
		<% @songs.each_with_index do |song , rank| %>
		<tr>
			<td><%= rank + 1 %></td>
			<td><%= tube song['song_url'] , 126 , 95 %></td>
			<td><a href="/song/<%= song['song_id'] %>"><%= song['song_name'] %></a></td>
			<td><a href="/artist/<%= song['artist_id'] %>"><%= song['artist_name'] %></a></td>
			<td><%= song['count'] %></td>
		</tr>
		<% end %>
	</tbody>
</table>

