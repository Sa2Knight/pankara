<!-- システムメッセージ -->
<% if @mod_config_result %>
  <p class="system-msg">
    <%= @mod_config_result %>
  </p>
<% end %>

<h2>ユーザ設定</h2>

<div class="config">
  <!-- アイコン設定 -->
  <div class="config-content">
    <div class="config-content-header">プロフィール</div>
    <div class="config-content-body">
      <form method="POST" action="/config/icon" enctype="multipart/form-data">
        <p><%= user_icon @current_user['username'] , 64 , 64%></p>
        <input type="file" name="icon_file" accept="image/jpeg,image/png,image/gif">
        <input type="submit" name="upload_icon_file" value="アップロード">
        <%= csrftoken %>
      </form>
    </div>
  </div>
  <!-- Twitter設定 -->
  <div class="config-content">
    <div class="config-content-header">Twitter設定</div>
    <div class="config-content-body">
      <form method="POST" action="/config/twitter">
        <h3>Twitter連携</h3>
        <% if @twitter_authed %>
          <p>認証済み</p>
          <p><img src="<%= @twitter_icon %>"> <%= @twitter_username %></p>
          <input type="submit" name="remove_oauth" value="認証解除">
        <% else %>
          <p>
            まだ認証を行っていません
            <input type="submit" name="start_oauth" value="認証する">
          </p>
        <% end %>
        <%= csrftoken %>
      </form>
    </div>
  </div>
