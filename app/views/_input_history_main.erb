<div id="input_history" class="input_dialog" title="歌唱履歴の入力">
  <p id="result"></p>
  <div>
    <label for="song">曲名:</label>
    <input id="song" class="tweet-text" title="曲名を入力してください。" type="text" name="song" value="" size="30" autofocus/>
  </div>
  <div>
    <label for="artist">歌手:</label>
    <input id="artist" class="tweet-text" title="歌手名を入力してください。" type="text" name="artist" value="" size="30"/>
  </div>
  <div>
    <label for="slidervalue">キー:</label>
    <p id="slidervalue" name="key"></p>
    <p id="seekbar" title="キーを設定してください。" name="seekbar" style="width:350px"></p>
    <div style="width:350px">
      <p style="float:left">-6</p>
      <p align="right">6</p>
    </div>
  </div>
  <div>
   <label for="score_type">採点方法:</label>
   <p><select id="score_type" title="採点方法を選択してください。" name="socre_type">
     <option value="0"></option>
     <% @score_type.each do |value| %>
       <option value="<%= value['id'] %>"><%= "#{value['brand']} #{value['name']}" %></option>
     <% end %>
   </select></p>
  </div>
  <div id="score_area" style="display: none">
    <label for="score">採点:</label>
    <input id="score" title="採点結果を入力してください。" type="number" name="score" value="" size="10"/>点
  </div>
  <% if @twitter %>
  <div>
    <input type="checkbox" title="ツイートする場合はチェックを付けてください。" name="tweet" value="tweet" id="tweet-checkbox">
    <label for="tweet-checkbox"> ツイートする</label>
  </div>
  <div id="tweet_text_area" class="hidden">
    <label for="tweet_text">ツイート内容:</label>
    <textarea class="tweet-text size-fixed" id="tweet_textbox" name="tweet_text" cols="30" rows="3"></textarea>
    <span id="tweet_text_count"></span>
  </div>
  <% end %>
  <div id="buttons">
    <input class='btn btn-default' id="button1" type="button" value="" />
    <input class='btn btn-default' id="button2" type="button" value="" />
  </div>
</div>
