#!/bin/bash

PROGNAME=$(basename $0)

# ヘルプ
usage() {
  echo "mySQLのバックアップを作成し、現在日時で保存する"
  echo "  Usage: zenra $PROGNAME [-m description] [-v][-p]"
  echo "オプション"
  echo "  -m 先頭にコメントを付与する"
  echo "  -v 進捗メッセージを表示します"
  echo "  -p 生成したバックアップをpushする"
  exit 1
}

# オプション解析
FLAG_M=0
FLAG_V=0
FLAG_P=0
VALUE_M=""
while getopts hvpm: OPT
do
  case $OPT in
    h)  usage
        exit 1
        ;;
    m)  FLAG_M=1
        VALUE_M=$OPTARG
        ;;
    v)  FLAG_V=1
        ;;
    p)  FLAG_P=1
        ;;
  esac
done
shift $((OPTIND - 1))

# 標準出力
mes () {
  if [ "$FLAG_V" -eq 1 ]; then
    echo $1
  fi
}

# メイン処理
cd $MARCHDIR

if [ $FLAG_M -eq 0 ]; then
  mes "バックアップ生成理由を指定してください"
  exit 1
fi

cat "backup/$(ls backup -1 | sort -r | head -1)" | sed -n '8,320p' > "/tmp/old_dump"
filename=$(date +"%Y_%m_%d_%H_%M")
filepath="backup/$(date +"%Y_%m_%d_%H_%M")"
echo "-- $VALUE_M" > "$filepath"
mysqldump --single-transaction -u root --password=zenra march >> "$filepath"

cat "$filepath" | sed -n '8,320p' > "/tmp/new_dump"
diff "/tmp/old_dump" "/tmp/new_dump" > /dev/null
if [ $? -eq 0 ]; then
  mes "最新のバックアップから変更がありません"
  rm "$filepath"
  exit 1
fi

mes "バックアップ($filename)を作成しました -$VALUE_M-"

if [ "$FLAG_P" -eq 1 ]; then
  cd $MARCHDIR/backup
  git add $filename
  git commit -m "ワイシャツサーバからの自動バックアップ"
  git push origin master
  mes "最新のバックアップをリモートリポジトリにpush"
fi
