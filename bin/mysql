#!/bin/bash

PROGNAME=$(basename $0)

# ヘルプ
usage() {
  echo "mySQLサーバにログイン、Marchデータベースに接続"
  echo "  Usage: zenra $PROGNAME [ [-s] -e execute sql]"
  echo "オプション"
  echo "  -e 指定したSQLを実行する"
  echo "    -s SQL文実行時の出力に、ヘッダ行と枠線を表示しない"
  exit 1
}

# オプション解析
FLAG_S=0
while getopts e:sh OPT
do
  case $OPT in
  h)  usage
      exit 1
      ;;
  e)  VALUE_E=$OPTARG
      ;;
  s)  FLAG_S=1
  esac
done
shift $((OPTIND - 1))

# メイン処理
password=$(bundle exec ruby bin/scripts/load_mysql_password.rb)
if [ -n "$VALUE_E" ]; then
  if [ "$FLAG_S" -eq 1 ]; then
    mysql -u root --password="$password" march -s -N -e "$VALUE_E"
  else
    mysql -u root --password="$password" march -e "$VALUE_E"
  fi
else
  mysql -u root --password="$password" march $@
fi
