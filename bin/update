#!/bin/bash

PROGNAME=$(basename $0)

# ヘルプ
usage() {
  echo "プログラムを更新してWebサーバを立ち上げる"
  echo "  Usage: zenra $PROGNAME [-p port] [-v]"
  echo "オプション"
  echo "  -r run modeを指定"
  echo "  -v 進捗を標準出力"
  exit 1
}

# オプション解析
FLAG_V=0
while getopts hvr: OPT
do
  case $OPT in
    h)  usage
        exit 1
        ;;
    v)  FLAG_V=1
        ;;
    r)  VALUE_R=$OPTARG
        ;;
  esac
done
shift $((OPTIND - 1))

# メイン処理
cd $MARCHDIR

if [ "${VALUE_R}X" = "X" ]; then
  VALUE_R="develop"
fi

if [ "$FLAG_V" -eq 1 ]; then
  zenra stop -v
  zenra backup -m "update実行前" -v
  echo "プログラムを更新します"
  git pull
  zenra init -b -v
  zenra run -r $VALUE_R -v
else
  zenra stop
  git pull
  zenra init -b
  zenra run -r $VALUE_R
fi
